<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<SwitchPreference
    android:key="allow_notifications"
    android:title="Allow Notifications"
    app:defaultValue="true"
    app:summary=""
    app:summaryOn="true" />
    <EditTextPreference
        app:summaryOn="true"
        android:title="Sample"
        android:key="sample"
        app:useSimpleSummaryProvider="true"/>
    <ListPreference
        android:title="Favorite Socials"
        android:key="fav_socials"
        app:defaultValue="@string/facebook_link"
        app:useSimpleSummaryProvider="true"
        android:entryValues="@array/fav_socials_values"
        android:entries="@array/fav_socials_entries"/>

</PreferenceScreen>